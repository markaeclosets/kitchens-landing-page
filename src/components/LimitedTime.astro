---
import Counter from "./Counter.astro";

---

<div class="w-full rounded-xl bg-black p-6 sm:p-8 shadow-lg relative overflow-hidden full-width-bg flex justify-center items-center">
  <section class="container py-10">
      <div class="z-10 flex flex-col sm:flex-row items-center justify-center gap-10">
        <Counter />
          <div class="text-center sm:text-left">
            <h2 class="text-2xl sm:text-3xl font-bold text-white mb-2">Limited Time Offer!</h2>
            <p class=" text-lg sm:text-xl" style="color: #c6b98b;">20% OFF + FREE DELIVERY & INSTALLATION</p>
          </div>
          <div class="ml-10">
            <input type="text" placeholder="Enter your email" class="bg-white text-black px-6 py-2.5 rounded-lg font-bold">
            <a href="/contact" class="bg-white text-black px-6 py-2.5 rounded-lg font-bold border-[3px] border-white ml-2">Get Discount</a>
            <p class="text-zinc-500 text-sm mt-2">*Discount is valid for 3 months from the date of email submission</p>
          </div>
        </div>
  </section>
</div>